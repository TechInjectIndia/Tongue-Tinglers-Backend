{
  "name": "Tongue Tingler",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^20.10.0"
  },
  "scripts": {
    "seed": "sequelize-cli db:seed:all",
    "start": "ts-node -r tsconfig-paths/register ./app.ts",
    "start:pm2": "pm2 start ./app.ts --interpreter ts-node --name TongueTingler",
    "stop:pm2": "pm2 stop TongueTingler",
    "restart:pm2": "pm2 restart TongueTingler",
    "delete:pm2": "pm2 delete TongueTingler",
    "logs:pm2": "pm2 logs TongueTingler",
    "repl": "ts-node -r tsconfig-paths/register",
    "test": "ts-mocha --paths -p ./tsconfig.json server/**/*.spec.ts",
    "coverage": "nyc npm run test",
    "dev": "ts-node-dev --watch -r tsconfig-paths/register ./app.ts",
    "lint": "git diff --cached --name-only --diff-filter=d | grep '.ts$' | xargs eslint",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc && npm run copy",
    "copy": "node --max-old-space-size=4096 copy.js",
    "tsc-w": "tsc -w"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^8.1.3",
    "@zohosign/nodejs-sdk-1.0": "^1.0.1",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.1.6",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "express-sanitizer": "^1.0.6",
    "firebase": "^10.13.1",
    "firebase-admin": "^12.4.0",
    "form-data": "^4.0.0",
    "fs": "0.0.1-security",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "helmet-csp": "^4.0.0",
    "html-pdf": "^3.0.1",
    "jsdom": "^25.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "newrelic": "^12.8.1",
    "otp-generator": "^4.0.1",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "rate-limiter-flexible": "^5.0.3",
    "razorpay": "^2.9.4",
    "resend": "^4.0.0",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "twilio": "^5.3.4",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:fix"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint server/**/*.js --fix-dry-run"
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.5.2",
    "@types/pg": "^8.11.9",
    "@types/sequelize": "^4.28.20",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
