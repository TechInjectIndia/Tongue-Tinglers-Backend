{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "allowJs": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2019", "dom"],
    "baseUrl": "./",  // Set base directory to apps
    "paths": {
      "*": ["*"]  // Allows any path inside the apps folder to be resolved
    }
  },
  "downlevelIteration": true,
  "include": [
    "./apps/**/*",  // Include all files in the apps directory
    "./app.ts",     // If app.ts is outside the apps folder
    "src/**/*.ts",  // If you have any src folder
    "types/**/*"    // If you have any type definitions
  ],
  "exclude": [
    "node_modules"
  ]
}
