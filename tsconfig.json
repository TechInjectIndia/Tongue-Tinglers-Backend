{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "target": "es6", /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "module": "commonjs", /* Specify what module code is generated. */
    "outDir": "./build",
    "allowJs": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "baseUrl": "server",
    "paths": {
      "@constants": [
        "./constants"
      ],
      "config/*": [
        "./config/*"
      ],
      "contracts/*": [
        "./contracts/*"
      ],
      "controllers/*": [
        "./controllers/*"
      ],
      "database/*": [
        "./database/*"
      ],
      "libraries/*": [
        "libraries/*"
      ],
      "interfaces/*": [
        "./interfaces/*"
      ],
      "middlewares/*": [
        "./middlewares/*"
      ],
      "models/*": [
        "./models/*"
      ],
      "routes/*": [
        "./routes/*"
      ],
      "services/*": [
        "./services/*"
      ]
    }
  },
  "downlevelIteration": true,
  "include": [
    "./server/**/*",
    "./app.ts",
    "src/**/*.ts"
, "types", "database", "config", "constants", "routes", "libraries", "static/views/email/constants.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
