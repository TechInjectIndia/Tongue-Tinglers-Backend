{
  "name": "Tongue Tingler",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^20.10.0"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register ./app.ts",
    "repl": "ts-node -r tsconfig-paths/register",
    "test": "ts-mocha --paths -p ./tsconfig.json server/**/*.spec.ts",
    "coverage": "nyc npm run test",
    "dev": "ts-node-dev --watch -r tsconfig-paths/register ./app.ts",
    "lint": "git diff --cached --name-only --diff-filter=d | grep '.ts$' | xargs eslint",
    "lint:fix": "npm run lint -- --fix",
    "tsc": "tsc",
    "tsc-w": "tsc -w"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "html-pdf": "^3.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "otp-generator": "^4.0.1",
    "pg": "^8.12.0",
    "sequelize": "^6.35.2",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:fix"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint server/**/*.js --fix-dry-run"
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "devDependencies": {
    "tsconfig-paths": "^4.2.0"
  }
}
